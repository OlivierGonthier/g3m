<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" >

    <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/sens"
            android:orientation="horizontal"
            android:paddingTop="20dip" >

        <RadioButton
                android:id="@+id/new_tome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_add_to_me"
                android:checked="true"
                android:textColor="#333" />

        <RadioButton
                android:id="@+id/newtoanother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_add_from_me"
                android:textColor="#333" />
    </RadioGroup>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dip" >

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:text="@string/dialog_add_name" />

        <EditText
                android:id="@+id/nom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:paddingRight="10dp" />
    </LinearLayout>

    <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/nature"
            android:orientation="horizontal"
            android:paddingTop="20dip" >

        <RadioButton
                android:id="@+id/new_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_add_nature_money"
                android:checked="true"
                android:textColor="#333" />

        <RadioButton
                android:id="@+id/new_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_add_nature_object"
                android:textColor="#333" />
    </RadioGroup>

    <LinearLayout
            android:id="@+id/zone_money"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dip" >

        <TextView
                android:id="@+id/combien"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:text="@string/dialog_add_value" />

        <EditText
                android:id="@+id/value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:paddingRight="10dp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/zone_objet"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingTop="20dip" >

        <TextView
                android:id="@+id/quoi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:text="@string/dialog_add_description" />

        <EditText
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textCapWords"
                android:paddingRight="10dp" />
    </LinearLayout>

</LinearLayout>